{
    "manifest_version": 2,
    "name": "Doro",
    "version": "1.0",
    "description": "Pomodoro",
    "permissions": ["storage"],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["content.js"]
        }
    ],
    "icons": {
        "16": "tomato still.png",
        "48": "tomato still.png",
        "128": "tomato still.png"
    },
    "background":{
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "tomato still.png",
        "default_popup": "popup.html",
        "default_title": "A popup yay"
    }
    






}